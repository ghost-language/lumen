class Brick {
  function constructor(x, y) {
    this.x = x
    this.y = y
    this.width = 50
    this.height = 25

    this.inPlay = true
  }

  function draw() {
    if (this.inPlay) {
      graphics.setColor(color.white)
      graphics.filledRectangle(this.x, this.y, this.width, this.height)

      graphics.setColor(color.black)
      graphics.rectangle(this.x, this.y, this.width, this.height)
    }
  }

  function hit() {
    this.inPlay = false
  }
}